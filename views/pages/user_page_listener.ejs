<!DOCTYPE html>
<html lang="en">
    <head>

    </head>
    <body>
        <main>
          <div class="user_page">
            <%- include('../partials/listener_navbar') %>
            <div class="preferences-container">
              <div class="preferences">
                <h3 class="update-pref">UPDATE YOUR PREFERENCES</h3>
            <form action="/user/listener/profile/success" method="POST">
                <label for="genre">Choose a favourite genre:</label>
                <select name="genre" id="genre">
                  <option value="----">----</option>
                  <option value="Rock">Rock</option>
                  <option value="Indie">Indie</option>
                  <option value="Electronic">Electronic</option>
                  <option value="Alternative">Alternative</option>
                  <option value="Metal">Metal</option>
                </select>
                <select name="genre" id="genre">
                  <option value="----">----</option>
                  <option value="Rock">Rock</option>
                  <option value="Indie">Indie</option>
                  <option value="Electronic">Electronic</option>
                  <option value="Alternative">Alternative</option>
                  <option value="Metal">Metal</option>
                </select>
                <select name="genre" id="genre">
                  <option value="----">----</option>
                  <option value="Rock">Rock</option>
                  <option value="Indie">Indie</option>
                  <option value="Electronic">Electronic</option>
                  <option value="Alternative">Alternative</option>
                  <option value="Metal">Metal</option>
                </select>
                <br>
                <input style="color: aqua" type="text" name="age" id="age" placeholder="Age">
                <input style="color: aqua" type="text" name="location" id="location" placeholder="Location">
                <input style="color: aqua" type="text" name="artist" id="artist" placeholder="Favourite Artist">
                <input style="color: aqua" type="text" name="bio" id="bio" placeholder="Bio">
                <br><br>
                <button class="update-button" value="Update" type="submit">UPDATE</button>
              </form>
              </div>
            </div>
            <% if(error !== "") { %>
              <p align="center"><%= error %></p>
            <% } %>
              <div class="profile-pic-container">
                <div class="profile-pic">
              <img id="upload-img" width="200" height="200" src="/<%= user.picture %>"><br>
              <a id="upload" href="upload">Change profile picture</a><br>
              <p><%= user.first_name %> <%= user.last_name %>, <%= user.age %></p>
              <p>Location: <%= user.location %></p>
              <p>Favourite artist: <%= fave_artist %></p>
              <p>Genres: <%= genres %></p>
              <p>Bio: <%= user.bio %></p>
              </div>
              </div>

              <div class="playlist-container">
                <iframe style="border-radius:12px" src="https://open.spotify.com/embed/playlist/<%= user.playlist %>?utm_source=generator&theme=0" width="100%" height="152" frameBorder="0"></iframe>
                <form action="/user/listener/profile/playlist/update" method="POST">
                <label for="playlist">Link your spotify playist:</label>
                <input type="text" name="playlist" id="myInput" placeholder="URL">
                <button class="update-button" value="Update" type="submit">UPDATE</button>
              </form>
            </div>

              <div class="events-container">
                <div class="events">
                  Attending
                  <ul>
                    <% for (let i = 0; i < events.length; i++) { %>
                      <li>
                        <h3><a id="loginLink" href="/event/<%= events[i].id %>"><%= events[i].name %></a></h3>
                      </li>
                      <% } %>
                  </ul>
                </div>
              </div>

              <div class="followers-container">
                <div class="Followers">
                  Following:
                  <ul>
                    <% for (let i = 0; i < followers.length; i++) { %>
                      <li>
                        <a id="loginLink" href="/user/promoter/<%= followers[i].id %>/profile"><h3><%= followers[i].company_name %></h3></a>
                      </li>
                    <% } %>
                  </ul>
                </div>
              </div>

              <div class="friends-container">
                <div class="friends">
                  Friends List:
                  <ul>
                    <% friends.forEach(function (object) { %>
                    <li>
                      <a id="loginLink" href="/user/listener/<%= user.id %>/messages/<%= object.id %>"</a><%= object.name %></a>
                    </li>
                    <% }); %>
                  </ul>
                </div>
              </div>
          </div>
        </main>
    </body>
</html>